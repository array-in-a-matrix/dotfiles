# . torsocks on

if [[ -n $(tty | grep tty) ]]; then 
    source ~/.cache/wal/colors-tty.sh
    unimatrix -w -s 95
fi

lfcd() {
    tmp="$(mktemp)"
    lfrun -last-dir-path="$tmp" "$@"
    if [ -f "$tmp" ]; then
        dir="$(cat "$tmp")"
        rm -f "$tmp"
        [ -d "$dir" ] && [ "$dir" != "$(pwd)" ] && cd "$dir"
    fi
}
bindkey -s '^o' 'lfcd\n'

